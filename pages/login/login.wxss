/* pages/login/login.wxss */
.bg{
    width: 100%;
    height: 125px;
}
.return{
    position: fixed;
    top: 0;
    z-index: 100;
    width: 100%;
    height: 44Px;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 0 20px;
    box-sizing: border-box;
}
.x{
    font-size: 24px;
}
.main{
    text-align: left;
    width: 280px;
    position: absolute;
    left: 48px;
    top: 54px;
    z-index: 9;
    display: flex;
    flex-direction: column;
}
.title{
    font-family: PingFangSC-Medium;
    font-weight: 500;
    font-size: 22px;
    color: #333;
    margin-bottom: 60px;
}
.hint{
    position: absolute;
    top: 32px;
    font-family: PingFangSC-Regular;
    font-size: 12px;
    color: #898989;
}
.phone{
    font-family: PingFangSC-Regular;
    font-size: 16px;
    margin-bottom: 16px;
}
.input{
    width: 100%;
    border-bottom: 1px solid #898989;
    padding: 9px 0 10px;
    height: 22px;
}
.get{
    color: #fff;
    font-size: 15px;
    width: 100%;
    height: 44px;
    background: #C04374;
    line-height: 44px;
    text-align: center;
    margin-top: 10px;
    margin-bottom: 24px;
}
.otherLogin{
    font-size: 12px;
    letter-spacing: 0.3px;
    text-decoration: underline;
}
.bt{
    width: 100%;
    position: absolute;
    bottom: 36px;
    text-align: center;
    font-size: 12px;
    text-align: center;
}

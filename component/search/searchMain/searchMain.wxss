/* component/search/searchMain/searchMain.wxss */
.ListMiage{
    position: relative;
    display: flex;
    flex-direction: column;
    padding: 0 18px;
}
.ListMiageWrap{
    width: 100%;
    height: 200px;
}
.ListMiageImage{
    width: 100%;
    height: 200px;
}
.searchMainTitle{
    margin-top:10px;
    height: 20px;
    font-size: 15px;
    color: #333;
    letter-spacing: 0;
    font-weight: 500;
    margin-bottom: 6px;
}
.searchMainFont{
    font-size: 14px;    
    color: #898989;
    width: 100%;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
}
.SearchWrap{
    display: flex;
    justify-content: space-between;
    align-items: center;
}
.SearchUl{
    display: flex;
}
.SearchLi{
    list-style: none;
    border: .5px solid rgba(193,67,116,.2);
    padding: 3px 6px;
    font-family: PingFangSC-Light;
    font-size: 12px;
    color: #c14374;
    letter-spacing: .2px;
    margin:10px 9px 10px 0;
}
.SearchPrice{
    font-family: PingFangSC-Medium;
    font-size: 18px;
    color: #c04374;
    letter-spacing: .8px;
    white-space: nowrap;
}
.PostionView{
    position: absolute;
    top: 0;
    left: 29px;
    padding: 3px 6px;
    color: #fff;
    background: rgba(0,0,0,.5);
    border-radius: 0 0 3px 3px;
    font-size: 12px;
}